<div class="sm:flex sm:items-start sm:space-x-4 mb-8">
  <picture class="block flex-shrink-0 mb-4 sm:mb-0 sm:w-48">
    <source media="(min-width:600px)" srcset="{% getImageUrl project.featuredImage, 192 %}" />
    <img src="{% getImageUrl project.featuredImage, 672, 200 %}" alt="{{ project.featuredImage.alt }}" />
  </picture>

  <div>
    <h3 class="font-heading text-xl mb-4">{{ project.title }}</h3>

    <ul class="-mx-2.5 mb-4">
      {% for tag in project.tags %}
        <li class="inline-block px-2.5 py-1.5 text-xs text-gray-700 mb-2">{{ tag }}</li>
      {% endfor %}
    </ul>

    {% if project.featuredCopy %}
    <div class="block-content mb-8">
      {{ project.featuredCopy | sanityHTML | safe }}
    </div>
    {% endif %}

    {% if project.linkUrl and project.linkName %}
    <p><a class="fancy-link" href="{{ project.linkUrl }}">{{ project.linkName }}</a></p>
    {% endif %}
  </div>
</div>
