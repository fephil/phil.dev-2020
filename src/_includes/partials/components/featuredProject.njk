<div class="md:flex items-start md:space-x-4 mb-8">
  <img class="hidden md:block w-48" src="{{ project.featuredImage | getImage }}" alt="{{ project.featuredImage.alt }}" />

  <div>
    <h3 class="font-heading text-xl mb-4">{{ project.title }}</h3>

    <ul class="-mx-2.5 mb-4">
      {% for tag in project.tags %}
        <li class="inline-block px-2.5 py-1.5 text-xs text-gray-700 mb-2">{{tag}}</li>
      {% endfor %}
    </ul>

    <div class="block-content mb-8">
      {{ project.featuredCopy | sanityHTML | safe }}
    </div>

    {% if project.linkUrl and project.linkName %}
    <p><a class="fancy-link" href="{{ project.linkUrl }}">{{ project.linkName }}</a></p>
    {% endif %}
  </div>
</div>
